@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>BML Intro</title>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            background: black;
            overflow: hidden;
            font-family: Arial, Helvetica, sans-serif;
        }

        .intro-container {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            perspective: 800px;
        }

        .logo {
            font-size: 140px;
            font-weight: 900;
            color: #e50914;
            letter-spacing: 18px;
            opacity: 0;
            animation: logoIntro 5s ease forwards;
            text-shadow:
                0 0 25px rgba(229, 9, 20, 0.7),
                0 0 60px rgba(229, 9, 20, 0.4);
        }

        @@keyframes logoIntro {
            0% {
                transform: scale(0.4);
                opacity: 0;
                filter: blur(25px);
            }

            35% {
                opacity: 1;
                filter: blur(0);
            }

            70% {
                transform: scale(1.15);
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
    </style>
</head>

<body>

    <div class="intro-container">
        <div class="logo">BML</div>
    </div>

    <!-- ÁUDIO -->
    <audio id="tudum" preload="auto">
        <source src="@Url.Content("~/audio/tudum.mp3")" type="audio/mpeg" />
    </audio>

    <script>
        const audio = document.getElementById("tudum");
        let somLiberado = false;

        audio.load();

        function liberarSom() {
            if (somLiberado) return;
            somLiberado = true;

            audio.play().catch(() => { });

            document.removeEventListener("click", liberarSom);
            document.removeEventListener("keydown", liberarSom);
            document.removeEventListener("touchstart", liberarSom);
        }

        // qualquer interação libera o som
        document.addEventListener("click", liberarSom);
        document.addEventListener("keydown", liberarSom);
        document.addEventListener("touchstart", liberarSom);

        // redireciona após a intro
        setTimeout(() => {
            window.location.href = '@Url.Action("Index", "Filmes")';
        }, 5200);
    </script>

</body>
</html>
